<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_appName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="280dp"
        android:inputType="textPersonName"
        android:text="Classic 5Rak"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_appImage_imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/main_appImage_imageView"
        android:layout_width="212dp"
        android:layout_height="210dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/cnu_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <EditText
        android:id="@+id/main_ID_editText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:hint="ID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/main_PW_editText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:hint="PW"
        app:layout_constraintLeft_toLeftOf="@id/main_ID_editText"
        app:layout_constraintTop_toBottomOf="@id/main_ID_editText"
        app:layout_constraintRight_toRightOf="@id/main_ID_editText"
        />

    <CheckBox
        android:id="@+id/main_autoLogin_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 로그인"
        android:layout_marginTop ="10dp"
        app:layout_constraintLeft_toLeftOf="@id/main_PW_editText"
        app:layout_constraintTop_toBottomOf="@id/main_PW_editText"

        />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        app:layout_constraintRight_toRightOf="@id/main_PW_editText"
        app:layout_constraintTop_toBottomOf="@id/main_PW_editText"/>


    <RadioButton
        android:id="@+id/main_showPW_RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/main_PW_editText"
        app:layout_constraintRight_toRightOf="@id/main_PW_editText"
        app:layout_constraintTop_toTopOf="@id/main_PW_editText" />

    <Button
        android:id="@+id/main_gameStart_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="GAME START"
        app:layout_constraintTop_toBottomOf="@id/main_signUp_Btn"
        app:layout_constraintRight_toRightOf="@id/main_signUp_Btn"
        app:layout_constraintLeft_toLeftOf="@id/main_signUp_Btn"
        />

    <Button
        android:id="@+id/main_signUp_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Naver Login"
        app:layout_constraintTop_toBottomOf="@id/main_login_btn"
        app:layout_constraintRight_toRightOf="@id/main_PW_editText"
        app:layout_constraintLeft_toLeftOf="@id/main_ID_editText"
        />


</android.support.constraint.ConstraintLayout>