<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameStartActivity">

    <ImageView
        android:id="@+id/userProfile_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="250dp"
        app:srcCompat="@drawable/base_propic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/profile_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        app:layout_constraintTop_toBottomOf="@+id/userProfile_imageView"
        app:layout_constraintBottom_toTopOf="@+id/gs_gameStart_button"
        app:layout_constraintRight_toRightOf="@+id/userProfile_imageView"
        app:layout_constraintLeft_toLeftOf="@+id/userProfile_imageView"/>

    <Button
        android:id="@+id/gs_gameStart_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:text="Game Start"
        app:layout_constraintBottom_toBottomOf="@+id/userProfile_imageView"
        app:layout_constraintLeft_toLeftOf="@+id/userProfile_imageView"
        app:layout_constraintRight_toRightOf="@+id/userProfile_imageView"
        app:layout_constraintTop_toTopOf="@+id/userProfile_imageView"
        app:layout_constraintVertical_bias="0.404" />

    <Button
        android:id="@+id/gs_gameStop_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Game Stop"
        app:layout_constraintBottom_toTopOf="@+id/gs_gameStart_button"
        app:layout_constraintLeft_toLeftOf="@+id/userProfile_imageView"
        app:layout_constraintRight_toRightOf="@+id/userProfile_imageView" />


</android.support.constraint.ConstraintLayout>


