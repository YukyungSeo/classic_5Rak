<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameSelectActivity">


    <ImageView
        android:id="@+id/userProfile_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="250dp"
        app:srcCompat="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <Button
        android:id="@+id/gameStart_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Game Start"
        android:layout_marginTop="600dp"
        app:layout_constraintBottom_toBottomOf="@+id/userProfile_imageView"
        app:layout_constraintTop_toTopOf="@+id/userProfile_imageView"
        app:layout_constraintRight_toRightOf="@+id/userProfile_imageView"
        app:layout_constraintLeft_toLeftOf="@+id/userProfile_imageView"
        />

    <Button
        android:id="@+id/myRank_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="My Rank"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/gameStart_button"
        app:layout_constraintTop_toTopOf="@+id/gameStart_button"
        app:layout_constraintRight_toRightOf="@+id/gameStart_button"
        app:layout_constraintLeft_toLeftOf="@+id/gameStart_button" />


</android.support.constraint.ConstraintLayout>


